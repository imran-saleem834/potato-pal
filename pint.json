{
  "preset": "laravel",
  "rules": {
    "binary_operator_spaces": {
      "default": "single_space",
      "operators": {
        "=>": "align",
        "=": "align",
        "-=": "align",
        "+=": "align"
      }
    },
    "ordered_imports": {
      "sort_algorithm": "length"
    }
  },
  "exclude": [
    "tests"
  ]
}
